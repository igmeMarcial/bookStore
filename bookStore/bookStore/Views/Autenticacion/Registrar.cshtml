@model bookStore.Models.ClassUsuarioModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Odisea Market - Registrar Cuenta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f0f4f8 0%, #e6eaf0 100%);
            font-family: 'Merriweather', serif;
        }

        .login-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 500px;
            padding: 40px;
            transition: all 0.3s ease;
        }

        .login-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }

        .login-header {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            width: 100%;
        }

        .btn-register {
            background-color: #3498db;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 12px;
            transition: all 0.3s ease;
        }

        .btn-register:hover {
            background-color: #2980b9;
            transform: scale(1.02);
        }
    </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="login-container  shadow-lg">
        <div class="text-center mb-4">
            <h2 class="login-header">Odisea Market</h2>
            <p class="text-muted">Crea tu cuenta</p>
        </div>

        <form asp-action="Registrar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Usuario" class="form-label">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Usuario" class="form-control" placeholder="Ingrese su correo electrónico" />
                </div>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control"
                        placeholder="Ingrese su contraseña" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                        placeholder="Confirme su contraseña" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-register btn-primary w-100">
                    Crear Cuenta
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">¿Ya tienes cuenta? <a href="@Url.Action("Index", "Autenticacion")">Inicia sesión
                    aquí</a></p>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>