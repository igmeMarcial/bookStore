@model IEnumerable<bookStore.Models.Book>

@{
    ViewData["Title"] = "Catálogo de Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    a {
        text-decoration: none !important;
    }
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        background: linear-gradient(to right bottom, #ffffff, #f8f9fa);
    }
    .card-header {
        background: linear-gradient(45deg, #1a237e, #3949ab);
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
    }
    .table {
        margin-bottom: 0;
    }
    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
        color: #2c3e50;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    .table tbody tr {
        transition: all 0.3s ease;
    }
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }
    .btn {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 500;
    }
    .btn-primary {
        background: linear-gradient(45deg, #1976d2, #2196f3);
        border: none;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.3);
    }
    .btn-danger {
        background: linear-gradient(45deg, #d32f2f, #f44336);
        border: none;
    }
    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
    }
    .btn-success {
        background: linear-gradient(45deg, #2e7d32, #4caf50);
        border: none;
    }
    .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
    }
    .book-title {
        font-weight: 500;
        color: #2c3e50;
    }
    .book-author {
        color: #666;
        font-style: italic;
    }
    .price-badge {
        background: #e3f2fd;
        color: #1976d2;
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-weight: 500;
    }
    .actions-column {
        min-width: 160px;
    }
    .table-responsive {
        border-radius: 0 0 15px 15px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0 text-white">
                <i class="fas fa-books me-2"></i>
                Catálogo de Libros
            </h3>
            <a asp-action="Ingresar" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Agregar Nuevo Libro
            </a>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th scope="col" width="80">#</th>
                        <th scope="col">Libro</th>
                        <th scope="col">Autor</th>
                        <th scope="col" width="120">Precio</th>
                        <th scope="col" class="text-center actions-column">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row" class="text-muted">@item.Id</th>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" 
                                             class="me-3" style="width: 40px; height: 60px; object-fit: cover; border-radius: 4px;">
                                    }
                                    <span class="book-title">@item.Name</span>
                                </div>
                            </td>
                            <td class="book-author">@item.Author</td>
                            <td>
                                <span class="price-badge">
                                    $@item.Price.ToString("N2")
                                </span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <a href="#" class="btn btn-danger eliminar-btn" data-id="@item.Id">
                                        <i class="fas fa-trash-alt me-1"></i>Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>

<script>
    $(document).ready(function () {
        $(".eliminar-btn").click(function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            Swal.fire({
                title: '¿Eliminar libro?',
                text: "Esta acción no se puede deshacer",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#f44336',
                cancelButtonColor: '#757575',
                confirmButtonText: '<i class="fas fa-trash-alt me-2"></i>Sí, eliminar',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancelar',
                customClass: {
                    popup: 'animated fadeInDown faster'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    var url = '@Url.Action("Eliminar", "Book")/' + id;
                    $.ajax({
                        url: url,
                        type: 'POST',
                        success: function (r) {
                            Swal.fire({
                                title: '¡Eliminado!',
                                text: 'El libro ha sido eliminado correctamente.',
                                icon: 'success',
                                confirmButtonColor: '#4caf50',
                                confirmButtonText: 'Aceptar'
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function (xhr, status, error) {
                            Swal.fire({
                                title: 'Error',
                                text: 'No se pudo eliminar el libro. Por favor, intente nuevamente.',
                                icon: 'error',
                                confirmButtonColor: '#f44336',
                                confirmButtonText: 'Aceptar'
                            });
                        }
                    });
                }
            });
        });
    });
</script>

