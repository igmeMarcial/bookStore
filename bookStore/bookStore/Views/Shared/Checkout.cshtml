@using bookStore.Models
@model List<Book>

<div class="checkout-container">
    <h3>Resumen de Compra</h3>

    @if (Model.Count == 0)
    {
        <p>El carrito está vacío.</p>
    }
    else
    {
        <ul>
            @foreach (var book in Model)
            {
                <li>
                    <div class="cart-item">
                        <img src="@book.ImageUrl" alt="@book.Name" style="width: 50px;">
                        <div>
                            <p>@book.Name</p>
                            <p>@book.Author</p>
                            <p>@book.Price.ToString("C")</p>
                        </div>
                    </div>
                </li>
            }
        </ul>

        <div class="cart-total">
            <p>Total: @Model.Sum(b => b.Price).ToString("C")</p>
        </div>

        <form method="post" action="/Cart/FinalizarCompra">
            <button type="submit" class="btn btn-success">Finalizar Compra</button>
        </form>
    }
</div>