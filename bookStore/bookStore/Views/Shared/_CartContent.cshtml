@using bookStore.Models

@model List<bookStore.Models.Book>


<h3>Carrito de Compras</h3>
@if (Model.Count == 0)
{
    <p>El carrito está vacío.</p>
}
else
{
    <ul class="cart-items-list">
        @foreach (var book in Model)
        {
            <li>
                <div class="cart-item">
                    <img src="@book.ImageUrl" alt="@book.Name">
                    <div class="cart-item-details">
                        <p class="book-title">@book.Name</p>
                        <p class="book-author">@book.Author</p>
                        <p class="book-price">@book.Price.ToString("C")</p>
                        <button class="remove-from-cart" data-id="@book.Id">Eliminar</button>
                    </div>
                </div>
            </li>
        }
    </ul>

    <div class="cart-total">
        <p>Total: @Model.Sum(b => b.Price).ToString("C")</p>
    </div>

    <button class="buy-now" onclick="window.location.href='/Cart/Checkout'">Comprar</button>
}



<script src="~/js/cart.js"></script>