                <a href="#">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
            <div class="phone">
                <span>Call +51 964 350 071</span>
            </div>
        </div>
        <!--END OF UPPER BAR-->
        <div class="container">
            <div class="row v-center">
                <div class="header-item item-left">
                    <div class="logo"><a href="#">EbookMarket</a></div>
                </div>
                <div class="header-item item-center">
                    <div class="menu-overlay"></div>
                    <nav class="menu">
                        <div class="mobile-menu-head">
                            <div class="go-back"><i class="fas fa-angle-left"></i></div>
                            <div class="current-menu-title"></div>
                            <div class="mobile-menu-close">&times;</div>
                        </div>
                        <ul class="menu-main">
                            <li>
                                <a href="#">Precios</a>
                            </li>

                            <li class="menu-item-has-children">
                                <a href="#">Destacados <i class="fas fa-angle-down"></i></a>
                                <div class="sub-menu mega-menu mega-menu-column-4">
                                    <div class="list-item text-center">
                                        <a href="#">
                                            <img class="show-img"
                                                 src="./imagenes/1.jpg"
                                                 alt="" />
                                            <h2 class="title">Novela</h2>
                                        </a>
                                    </div>

                                    <div class="list-item text-center">
                                        <a href="#">
                                            <img class="show-img"
                                                 src="./imagenes/2.jpg"
                                                 alt="" />
                                            <h2 class="title">Ciencia ficción</h2>
                                        </a>
                                    </div>

                                    <div class="list-item text-center">
                                        <a href="#">
                                            <img class="show-img"
                                                 src="./imagenes/3.jpg"
